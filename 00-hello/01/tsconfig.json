{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "AMD",
    // 制定编译后文件所在目录
    "outDir": "./dist",
    // 将代码合并成一个文件
    /*"outFile": "./dist/app.js",  */
    // 检查JS代码是否符合语法规范
    "checkJs": false,
    // 对JS文件进行编译
    "allowJs": false,
    // 移除注释
    "removeComments": true,
    // 不生成编译后的文件
    "noEmit": false,
    // 当有错误时，不生成编译后的文件
    "noEmitOnError": false,
    // 以严格模式解析，并为每个源文件生成 "use strict"语句
    "alwaysStrict": false,
    // 严格的空值检查
    "strictNullChecks": true,
    // 不允许隐式的any类型
    "noImplicitAny": true,
    // 不允许不明确类型的this
    "noImplicitThis": true
  }
}
